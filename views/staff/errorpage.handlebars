    <h3>Oops, we've encountered an error!</h3>
    <h4>Please Try Again</h4>
    {{#if reason}}
        <p>Remarks: {{reason}}</p>
    {{else}}
        <p>Remarks: None</p>
    {{/if}}
    <div>
        <a class="btn btn-dark" href="/">Return home</a>
    </div>
</div>