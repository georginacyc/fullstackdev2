<br>
<h5 style="text-align: center;"><strong>My Orders</strong></h5>
<br>
<div class="container">
    <table class="table table-fluid" id="myTable">

      <!--Table head-->
      <thead style="background-color:gray;">
          <tr style="color: white;">
            <th>Order ID</th>
            <th>Quantity</th>
            <th>Amount</th>
          </tr>
      </thead>
      <!--Table head-->

      <!--Table body-->
      <tbody>
        {{#each Order}}
          <tr>
            <th>{{orderId}}</th>
            <td>{{quantity}}</td>
            <td>{{total_Amt}}</td>
          </tr>
        {{/each}}
      </tbody>
      <!--Table body-->
    </table>
</div>
<script>
       $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>