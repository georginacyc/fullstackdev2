{{!-- view stock page --}}

<style>
    .table-primary,
    .table-primary>td,
    .table-primary>th {
        background-color: gray;
    }

    .table-primary tbody+tbody,
    .table-primary td,
    .table-primary th,
    .table-primary thead th {
        border-color: black;
    }
    .table-primary, .table tr{
        text-align: center;
    }
</style>

<h2>Inventory</h2>

<nav class = "navbar-light">
    <a style="font-weight: bold; color:darkslategrey" href= "#">Main</a>
    <a style="color:darkslategrey" href = "/staff/inventory/view-stock-orders">Incoming Orders</a>
</nav>
<hr>

<div class="container">
    <table class="table table-fluid" id="myTable">
        <thead style="color: white;">
            <tr class="table-primary">
                <th>Item Name</th>
                <th>Item Serial</th>
                <th>Stock Level</th>
                <th>Status</th>
                <th>Request Stock</th>
            </tr>
        </thead>
        <tbody>
            {{#each item}}
                <tr>
                    <td>{{itemName}}</td>
                    <td>{{itemSerial}}</td>
                    <td>{{stockLevel}}</td>
                    <td>{{status}}</td>
                    <td><a href="/staff/inventory/order-stock/{{itemSerial}}" class="btn btn-warning">Request Stock</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>