{{!-- for admin view --}}

<style>
    table, th, td {
        border-collapse: collapse;
        border: 1px solid black;
    }
    td {
        padding: 15px;
    }
</style>

<div class="card card-body">
    <h1 class="display-4" style="text-align: center">Monoqlo Staff Summary</h1>
    <hr class="titleHR">

    <table style="margin-left: auto; margin-right:auto">
        <tr>
            <td>
                First Name:
            </td>
            <td>
                {{staff.fname}}
            </td>
            <td>
                Role:
            </td>
            <td>
                {{staff.type}}
            </td>
        </tr>
        <tr>
            <td>
                Last Name:
            </td>
            <td>
                {{staff.lname}}
            </td>
            <td>
                Email:
            </td>
            <td>
                {{staff.email}}
            </td>
        </tr>
        <tr>
            <td>
                Date of Birth:
            </td>
            <td>
                {{staff.dob}}
            </td>
            <td>
                H/P:
            </td>
            <td>
                {{staff.hp}}
            </td>
        </tr>
        <tr>
            <td>
                Address:
            </td>
            <td colspan="3">
                {{staff.address}}
            </td>
        </tr>
        <tr></tr>
    </table>
</div>