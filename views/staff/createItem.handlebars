{{!-- create item form --}}
<form method="POST" action="" enctype=multipart/form-data>
    <div class = "form-group">
        <label for "itemName">Item Name</label>
        <input type = "text" class="form-control" name = "itemName" value="" required>
    </div>

    <div class = "form-group">
        <label for "itemSerial">Item Serial</label>
        <input type = "text" class = "form-control" name = "itemSerial" value="" required>
    </div>

    <div class= "form-group">
        <label>Item Category</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="itemCategory" id="Tops" value="Tops">
            <label class="form-check-label" for="Tops">Tops</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="itemCategory" id="Bottoms" value="Bottoms">
            <label class="form-check-label" for="Bottoms">Bottoms</label>
        </div>
    </div>

    <div class="form-group">
        <label>Item Gender</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="itemGender" id="F" value="F">
            <label class="form-check-label" for="F">F</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="itemGender" id="M" value="M">
            <label class="form-check-label" for="M">Bottoms</label>
        </div>
    </div>

    <div class="form-group">
        <label for "itemCost">Item Cost</label>
        <input type="number" step="0.05" class="form-control" name="itemCost" value="" required>
    </div>

    <div class="form-group">
        <label for "itemPrice">Item Price</label>
        <input type="number" step="0.05" class="form-control" name="itemPrice" value="" required>
    </div>

    <div class="form-group">
        <label for "itemDescription">Item Description</label>
        <textarea class="form-control" id="itemDescription" name = "itemDescription" placeholder="Item description and sizing" required ></textarea>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>