{{!-- create stock order form --}}
<style>
    .btn {
        background-color: gray;
        color: white;
    }

    .btn:hover {
        background-color: white;
        color: maroon;
        border-color: maroon;
    }
</style>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-muted text-center">Order Stock</h3>
            <form method="POST" action="/staff/inventory/stock/order/{{item.itemSerial}}">
                <div class="form-group">
                    <label for "stockorderDate">Order Date</label>
                    <input id="stockorderDate" class="form-control" name="stockorderDate" width="200" name="dateRelease"
                        readonly />
                </div>

                <div class="form-group">
                    <label for "shipmentStatus">Shipment Status</label>
                    <input type="text" class="form-control" name="shipmentStatus" value="Ordered" disabled required>
                </div>

                <div class="form-group">
                    <label for "shipmentDate">Shipment Date</label>
                    <input type="date" id="shipmentDate" class="form-control" name="shipmentDate" checkDate() value="" required>
                </div>

                <div id="order-item">
                    <div class="form-group">
                        <label for "itemSerial">Item Serial</label>
                        <input type="text" class="form-control" name="itemSerial" value="{{item.itemSerial}}" disabled
                            required>
                    </div>

                    <div class="form-group">
                        <label for "stockorderQuantity">Order Quantity</label>
                        <input type="number" class="form-control" name="stockorderQuantity" min="50"
                            placeholder="min 50" value="" required>
                    </div>
                </div>

                <br>
                <button type="submit" class="btn float-right">Submit Order</button>

            </form>
        </div>
    </div>
</div>

<script>
    $('#stockorderDate').datepicker({
        format: 'dd/mm/yyyy',
        value: new Date().toLocaleDateString('en-SG'),
        uiLibrary: 'bootstrap4',
    });

</script>