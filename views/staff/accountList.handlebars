{{!-- to show ALL accounts in the database --}}
<style>
    .table td.fit, 
    .table th.fit {
    white-space: nowrap;
    width: 1%;
    }
</style>

<div class="">
    <table id="accountsList" data-toggle="table" data-pagination="true" data-url="/staff/accounts-data" data-search="true" data-sort-name="type" data-show-refresh="true" data-show-columns="true" data-search-on-enter-key="true" data-show-search-button="true">
        <thead>
            <th data-field="type" data-sortable="true">Type</th>
            <th data-field="fname" data-sortable="true">First Name</th>
            <th data-field="lname" data-sortable="true">Last Name</th>
            <th data-field="email">Email</th>
            <th data-field="hp">H/P</th>
            <th data-field="lastLogin">Last Log In</th>
            <th data-field="id" data-formatter="tableButtons"></th>
        </thead>
    </table>

</div>

<script>
    $('#datepicker').datepicker({
        format: 'yyyy-mm-dd',
        uiLibrary: 'bootstrap4',
        defaultDate: "{{formatDate content.dob 'YYYY-MM-DD'}}"
    })
    function tableButtons(id) {
        return '<div style="display: flex; justify-content: space-between"><a href="/staff/manage-staff/' + id + '"><i class="fas fa-pencil-square-o text-dark"></i></a><a href="/staff/pdf/' + id + '" target="_blank"><i class="fas fa-print text-muted"></i></a><a href="/staff/delete-staff/' + id + '"><i class="fas fa-trash text-danger"></i></a></div>'
    }
</script>
