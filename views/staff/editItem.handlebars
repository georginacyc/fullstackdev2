{{!-- edit item form --}}
<style>
    .btn {
        background-color: gray;
        color: white;
    }

    .btn:hover {
        background-color: white;
        color: maroon;
        border-color: maroon;
    }
</style>
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-muted text-center">Edit Item</h3>

            <form method="POST" action="/staff/item/save-edited/{{item.itemSerial}}?_method=PUT">
                <input type="hidden" name="_method" value="PUT">

                <div>
                    <img class="border img-thumbnail img-fluid" style="object-fit:cover; max-height: 500px; width: 100%" id="preview"
                        src="\uploads\item_pictures/{{item.image}}"><br>
                </div>

                <div class="form-group">
                    <label for "itemName">Item Name</label>
                    <input type="text" class="form-control" id="itemName" name="itemName" value="{{item.itemName}}"
                        readonly>
                </div>

                <div class="form-group">
                    <label for "itemSerial">Item Serial</label>
                    <input type="text" class="form-control" id="itemSerial" name="itemSerial"
                        value="{{item.itemSerial}}" readonly>
                </div>

                <div class="form-group">
                    <label>Item Category</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="itemCategory" id="Tops" value="Tops"
                            {{radioCheck item.itemCategory "Tops"}} disabled>
                        <label class="form-check-label" id="Tops" for="Tops">Tops</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="itemCategory" id="Bottoms" value="Bottoms"
                            {{radioCheck item.itemCategory "Bottoms"}} disabled>
                        <label class="form-check-label" id="Bottoms" for="Bottoms">Bottoms</label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Item Gender</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="itemGender" id="F" value="F"
                            {{radioCheck item.itemGender "F"}} disabled>
                        <label class="form-check-label" id="F" for="F">F</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="itemGender" id="M" value="M"
                            {{radioCheck item.itemGender "M"}} disabled>
                        <label class="form-check-label" id="M" for="M">M</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for "itemCost">Item Cost</label>
                    <input type="number" id="itemCost" step="0.05" class="form-control" name="itemCost"
                        value="{{item.itemCost}}" required>
                </div>

                <div class="form-group">
                    <label for "itemPrice">Item Price</label>
                    <input id="itemPrice" type="number" step="0.05" class="form-control" name="itemPrice"
                        value="{{item.itemPrice}}" required>
                </div>

                <div class="form-group">
                    <label for "itemDescription">Item Description</label>
                    <textarea class="form-control" id="itemDescription" name="itemDescription"
                        placeholder="Item description and sizing" value="{{item.itemDescription}}"
                        required>{{item.itemDescription}}</textarea>
                </div>
                <br>
                <button type="submit" class="btn float-right">Submit</button>

            </form>
        </div>
    </div>
</div>