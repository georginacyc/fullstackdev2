<div class="card card-body">
    <h1 class="display-4" style="text-align: center">{{custName}}'s Profile</h1>
    <hr class="">
    </table> 
    <form method="POST" action="/user/save-user/{{user.id}}?_method=PUT">
            <div class="form-group">
                <label for="fname">First Name</label>
                <input type="text" id="fname" class="form-control" name="fname" value="{{user.fname}}">
            </div>
            <div class="form-group">
                <label for="lname">Last Name</label>
                <input type="text" id="lname" class="form-control" name="lname" value="{{user.lname}}">
            </div>
            <div class="form-group">
                <label for="hp">Mobile Number</label>
                <input type="number" id="hp" name="hp" class="form-control" value="{{user.hp}}">
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" size="50" class="form-control" value="{{user.address}}" >
            </div>
            
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" id="city" name="city" class="form-control" value="{{user.city}}" >
            </div>
            <div class="form-group">
                <label for="country">Country</label>
                <input type="text" id="country" name="country" class="form-control" value="{{user.country}}" >
            </div>
            <div class="form-group">
                <label for="postalcode">Postal Code</label>
                <input type="number" id="postalcode" name="postalcode" class="form-control" value="{{user.postalcode}}" >
            </div>
            
            <div class='form-field'>
                <label for='size'>Size Preference(Optional)</label>
                <select id="size"  name="size" class='form-control'>
                    <option>XS</option>
                    <option>S</option>
                    <option>M</option>
                    <option>L</option>
                    <option>XL</option>
                    <option>2XL</option>
                </select>
            </div>
            <br>
            <button type="submit" class="btn btn-dark float-right">Update</button>
            <a onclick="confirm_delete()" type="delete" class="btn btn-danger float-left" >Delete Account</a>
            </br>
        
         </form>
       
        
        <script>
            // after user clicks on delete it gets the deleteacc route and prompts user to confirm
            function confirm_delete(){
                var result = confirm("Delete?"); 
                if (result == true) { 
                    var href="/user/deleteacc/"
                    var xmlHttp = new XMLHttpRequest();
                    xmlHttp.open( "GET", href, false ); // false for synchronous request
                    xmlHttp.send( null );
                    window.location.href = '/user/login?delete=1';
                } else { 
                    alert("delete cancelled");
                } 
            }
        </script>
</div>