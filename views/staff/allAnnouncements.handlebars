{{!-- to show ALL accounts in the database --}}

<div class="container">
{{#if allannouncements}}
	<div class="card card-body">
		<h3 class="text-muted">Announcements</h3>
			<div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Title</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each allannouncements}}
                            <tr>
                                <td>{{formatDate date 'DD MMM YYYY'}}</td>
                                <td>{{title}}</td>
                                <td>{{description}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
	</div>

</div>
{{else}}
	<h3>No announcements</h3>
{{/if}}

<script>
    $('#datepicker').datepicker({
        format: 'yyyy-mm-dd',
        uiLibrary: 'bootstrap4',
        defaultDate: "{{formatDate content.date 'YYYY-MM-DD'}}"
    });
</script>
