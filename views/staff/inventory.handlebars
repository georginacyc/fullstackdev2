{{!-- view stock page --}}

<div class="container">
    <h2>Inventory</h2>
    <table class="table table-fluid" id="myTable">
        <thead>
            <tr class="table-primary">
                <th>Item Name</th>
                <th>Item Serial</th>
                <th>Item Category</th>
                <th>Item Gender</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Request Stock</th>
            </tr>
        </thead>
        <tbody>
            {{#each item}}
            <tr>
                <td>{{itemName}}</td>
                <td>{{itemSerial}}</td>
                <td>{{itemCategory}}</td>
                <td>{{itemGender}}</td>
                <td>{{itemQuantity}}</td>
                <td>{{itemStockStatus}}</td>
                <td><a href="" class="btn btn-warning">Request Stock</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>