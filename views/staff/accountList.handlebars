{{!-- to show ALL accounts in the database --}}

<div class="container">
{{#if accounts}}
	<div class="card card-body">
		<h3 class="text-primary">Accounts</h3>
			<div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Type</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>HP</th>
                            <th>DOB</th>
                            <th>Address</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each accounts}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{type}}</td>
                                <td>{{fname}}</td>
                                <td>{{lname}}</td>
                                <td>{{gender}}</td>
                                <td>{{email}}</td>
                                <td>{{hp}}</td>
                                <td>{{formatDate dob 'DD MMM YYYY'}}</td>
                                <td>{{address}}</td>
                                <td><a href="/staff/manageAccount/{{id}}" class="btn btn-warning">Update</a></td>
                                <td>
                                    <form action="" method="POST">
                                        <input type="submit" value="Delete" class="btn btn-danger">
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
	</div>

</div>
{{else}}
	<h3>No accounts registered.</h3>
{{/if}}

<script>
    $('#datepicker').datepicker({
        format: 'yyyy-mm-dd',
        uiLibrary: 'bootstrap4',
        defaultDate: "{{formatDate content.dob 'YYYY-MM-DD'}}"
    });
</script>
